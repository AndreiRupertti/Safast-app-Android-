<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimarytext"
    android:orientation="vertical"
    tools:context="android.app.safast.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:elevation="0dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentLeft="true"
        android:background="?attr/colorPrimary"
        android:layout_gravity="right"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout

            android:layout_below="@+id/tb_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:id="@+id/ll_alag"
            android:paddingBottom="15dp"
            android:background="@drawable/card_border">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-22dp"
                android:src="@drawable/alagamento"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="ALAGAMENTOS"
                android:textSize="25dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecondText"
                android:text="Esteja preparado!"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout

                android:layout_below="@+id/tb_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:id="@+id/ll_incen"
                android:paddingBottom="15dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-22dp"
                    android:src="@drawable/incendio"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="INCÊNDIOS"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondText"
                    android:text="Não brinque com fogo!"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
        <LinearLayout

                android:layout_below="@+id/tb_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:id="@+id/ll_terre"
                android:paddingBottom="15dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-22dp"
                    android:src="@drawable/terremoto"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="TERREMOTOS"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondText"
                    android:text="Conhecimento salva vidas!"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
        <LinearLayout

                android:layout_below="@+id/tb_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:id="@+id/ll_trans"
                android:paddingBottom="15dp"
                android:background="@drawable/card_border">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-22dp"
                    android:src="@drawable/transito"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="TRÂNSITO"
                    android:textSize="25dp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSecondText"
                    android:text="Não brinque de médico!"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
